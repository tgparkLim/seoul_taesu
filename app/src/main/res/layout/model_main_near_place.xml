<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="100dp"
    android:id="@+id/mCardPlace"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_pl1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@drawable/placeimage1"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/txt_plNameMNR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="태수요양원"
            android:textColor="#292929"
            android:textSize="17dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_pl1"/>

        <TextView
            android:id="@+id/txt_plCategoryMNR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경로당"
            android:textColor="#689F38"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/txt_plNameMNR"
            android:layout_alignLeft="@+id/txt_plNameMNR"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/txt_plAddressMNR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강남구 어쩌동"
            android:layout_below="@+id/txt_plCategoryMNR"
            android:layout_alignLeft="@+id/txt_plCategoryMNR"
            android:textSize="10dp"
            android:textColor="#292929"/>

        <TextView
            android:id="@+id/txt_plPhoneMNR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0101111111"
            android:layout_below="@+id/txt_plAddressMNR"
            android:layout_alignLeft="@+id/txt_plAddressMNR"
            android:textSize="15dp"
            android:textColor="#292929"/>
