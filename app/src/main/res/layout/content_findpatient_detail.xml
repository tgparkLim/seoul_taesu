<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/placedetail_scroll"
        android:layout_marginTop="50dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <TextView
                    android:id="@+id/txt_findtitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="강남구 60대환자 환자 구합니다."
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#292929"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:id="@+id/txt_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="등록자 : "
                    android:layout_below="@+id/txt_findtitle2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/txt_findnic2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="태수니"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/txt_user"
                    android:layout_alignBottom="@+id/txt_user"/>

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="등록일 : "
                    android:layout_below="@+id/txt_user"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/txt_finddate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017.10.18"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/txt_date"
                    android:layout_alignBottom="@+id/txt_date"/>

            </RelativeLayout>

            <View
                android:id="@+id/view_finddetail_1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f0f0f0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="간병인정보"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#292929"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별 : " />

                <TextView
                    android:id="@+id/txt_findgender2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_gender"
                    android:text="여자" />

                <TextView
                    android:id="@+id/txt_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_gender"
                    android:layout_marginTop="5dp"
                    android:text="나이 : " />

                <TextView
                    android:id="@+id/txt_findage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/txt_age"
                    android:layout_toRightOf="@+id/txt_age"
                    android:text="75" />

                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_age"
                    android:layout_marginTop="5dp"
                    android:text="연락처 : " />

                <TextView
                    android:id="@+id/txt_findphone2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/txt_phone"
                    android:layout_toRightOf="@+id/txt_phone"
                    android:textColor="#8BC34A"
                    android:text="01077777777" />

                <TextView
                    android:id="@+id/txt_certificate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_phone"
                    android:layout_marginTop="5dp"
                    android:text="간병인 자격증 유무 : " />

                <TextView
                    android:id="@+id/txt_findcertify2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/txt_certificate"
                    android:layout_toRightOf="@+id/txt_certificate"
                    android:text="유" />

                <TextView
                    android:id="@+id/txt_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_certificate"
                    android:layout_marginTop="5dp"
                    android:text="직업 : " />

                <TextView
                    android:id="@+id/txt_findjob2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/txt_job"
                    android:layout_toRightOf="@+id/txt_job"
                    android:text="간호사" />

            </RelativeLayout>

            <View
                android:layout_marginTop="10dp"
                android:id="@+id/view_finddetail_2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f0f0f0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원하는 근무조건"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#292929"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위치 : " />
                <TextView
                    android:id="@+id/txt_findaddress2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_address"
                    android:text="강남구 서초동" />

                <TextView
                    android:id="@+id/txt_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_address"
                    android:text="급여 : "
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/txt_findcost2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_cost"
                    android:layout_alignBottom="@+id/txt_cost"
                    android:text="5000000" />
                <TextView
                    android:id="@+id/txt_won"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_findcost2"
                    android:layout_alignBottom="@+id/txt_cost"
                    android:text="원" />

                <TextView
                    android:id="@+id/txt_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_cost"
                    android:text="근무기간 : "
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/txt_findstart2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_term"
                    android:layout_alignBottom="@+id/txt_term"
                    android:text="2017-10-18" />

                <TextView
                    android:id="@+id/txt_desire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_term"
                    android:text="원하는 환자의 성별 : "
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/txt_finddesire2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_desire"
                    android:layout_alignBottom="@+id/txt_desire"
                    android:text="여성" />

            </RelativeLayout>

            <View
                android:layout_marginTop="10dp"
                android:id="@+id/view_finddetail_3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f0f0f0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세내용"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#292929"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/txt_findcontent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="우리태수니 귀여운태수니"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>