<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taesu.seoul2.Login.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
            android:id="@+id/Edit_regitID"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="아이디" />

            <Button
                android:id="@+id/btn_regitvalidate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중복확인"/>

        </LinearLayout>

        <EditText
            android:id="@+id/Edit_regitPW"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="비밀번호" />

        <EditText
            android:id="@+id/Edit_regitPW2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="비밀번호 재확인" />

        <EditText
            android:id="@+id/Edit_regitNic"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="닉네임" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textSize="20dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_regit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_regitFm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여성"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/radio_regitm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남성" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연령대"
                android:textSize="20dp"/>

            <Spinner
                android:id="@+id/spin_regitAge"
                android:layout_width="100dp"
                android:layout_height="30dp">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거주지지"
                android:textSize="20dp"/>

            <Spinner
               android:id="@+id/spin_regitAdd"
                android:layout_width="100dp"
                android:layout_height="30dp">

            </Spinner>
        </LinearLayout>

        <Button
            android:id="@+id/btn_regitJoin"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="가입하기"/>
    </LinearLayout>

</RelativeLayout>
