<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:id="@+id/mCardNotice">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/txt_noticategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#689F38"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="이벤트"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/txt_notititle"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="태수니바보"
            android:textSize="20dp"
            android:layout_below="@+id/txt_noticategory"/>
        <TextView
            android:id="@+id/txt_notidate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="날짜"
            android:textSize="15dp"
            android:layout_below="@+id/txt_notititle"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/rl1"
        android:layout_centerVertical="true"
        android:background="@drawable/right_arrow"/>

    <View
        android:id="@+id/view_noti1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#bdbdbd"
        android:layout_below="@+id/rl1" />
</RelativeLayout>